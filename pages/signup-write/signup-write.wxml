<image src="https://gitee.com/Niu_efei/picturep/raw/master/202302081948068.png" mode="scaleToFill" class="bg-img" style="height: {{clientHeight+'px'}};"/>

<view class="wrapper" style="height: {{clientHeight+'px'}};">
  <view class="ipt-field">
    <view>
      <label for="name">姓名</label>
      <input type="text" id="name" class="ipt" bindchange="iptChange" data-type="name" 	placeholder="请输入姓名" maxlength="10"/>
    </view>
    <view>
      <label for="studentNumber">学号</label>
      <input type="text" id="studentNumber" class="ipt" bindchange="iptChange" data-type="studentNumber" 	placeholder="请输入学号" maxlength="10"/>
    </view>
    <view>
      <label for="college">学院</label>
      <input type="text" id="college" class="ipt" bindchange="iptChange" data-type="college" 	placeholder="请输入学院" maxlength="10"/>
    </view>
    
    <view>
      <label for="major">专业</label>
      <input type="text" id="major" class="ipt" bindchange="iptChange" data-type="major" 	placeholder="请输入专业" maxlength="10"/>
    </view>

    <view>
      <label for="phoneNumber">电话</label>
      <input type="text" id="phoneNumber" class="ipt" bindchange="iptChange" data-type="phoneNumber" 	placeholder="请输入电话" maxlength="30"/>
    </view>
    <view class="introduction-field">
      <label>简介</label>
      <textarea class="introduction" placeholder="目前的学习进度，对工作室的期望" bindblur="iptChange" data-type="introduction"></textarea>
    </view>
  </view>
  
</view>